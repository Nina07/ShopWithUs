<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="text-align-center font-18">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td width="10%"><%= product.name %></td>
        <td width="40%"><%= product.description %></td>
        <td width="10%"><%= product.price %></td>
        <td width="10%"><%= product.stock_count %></td>
        <td width="10%"><%= link_to 'Show', product %></td>
        <td width="10%"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td width="10%"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

